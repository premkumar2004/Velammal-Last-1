          float:left;
         
        }
        img{
    width: 500px;
    height: 550px;;
    
    
       
    
        }
        .reg {
        background-image: linear-gradient(to right, #ff0303, #c67422);
        -webkit-background-clip: text; /* For Safari */
        background-clip: text;
        color: transparent;
    }
    
        
    @media screen and (max-width: 880px) {
      body {
     
        width: 100%;
        background-image: url('./assets/bg.jpg');
      }
      .container{
    
          text-align: center;
          width: 900px;
    
     }
     .entire{
    
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    
    width: 90%;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    
     }
    .contain{
      margin-top: 0;
      margin-bottom: 10px;;
    }
    
    }
      </style>
</head>
<body>
    <div class="entire">
        <div class="container">
  <h4 class="zappy">Reset Password</h4>

  <% if (locals.error) { %>
    <p><%= locals.error %></p>
  <% } %>

  <form method="POST" action="/reset-password/<%= locals.token %>" id="loginForm">
    <label for="email">Enter Email Id:</label>
    <input type="mail" id="email" name="email" required>
    <label for="newPassword">Enter new password:</label>
    <input type="password" id="newPassword" name="newPassword" required>
    <button type="submit">Reset Password</button>
  </form>
</div>
</div>
</body>
